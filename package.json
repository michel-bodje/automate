{
  "name": "allen-madelin-automate",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/michel-bodje/automate.git"
  },
  "license": "MIT",
  "scripts": {
    "deploy": "npm run build && git add docs/ && git commit -m 'Deploy' && git push",
    "prebuild": "npm run validate:outlook && npm run validate:word",

    "build": "rm -rf docs/* && webpack --mode production && cp app/404.html docs/404.html",

    "lint": "office-addin-lint check",
    "lint:fix": "office-addin-lint fix",
    "prettier": "office-addin-lint prettier",
    "signin": "office-addin-dev-settings m365-account login",
    "signout": "office-addin-dev-settings m365-account logout",

    "dev:outlook": "cross-env DEV_SERVER_PORT=3000 APP_TO_DEBUG=outlook webpack serve --mode development",
    "dev:word": "cross-env DEV_SERVER_PORT=3001 APP_TO_DEBUG=word webpack serve --mode development",
  
    "wait:outlook": "wait-on https://localhost:3000/taskpane.html",
    "wait:word": "wait-on https://localhost:3001/taskpane.html",
  
    "debug:outlook": "office-addin-debugging start manifests/manifest.outlook.xml --dev-server-port 3000",
    "debug:word": "office-addin-debugging start manifests/manifest.word.xml --dev-server-port 3001",

    "start": "concurrently -n OUTL,WORD \"npm run start:outlook\" \"npm run start:word\"",
    "stop": "concurrently -n OUTL,WORD \"npm run stop:outlook\" \"npm run stop:word\"",
  
    "start:outlook": "concurrently -n SERVER,DEBUG -c magenta,green \"npm run dev:outlook\" \"npm run wait:outlook && npm run debug:outlook\"",
    "start:word": "concurrently -n SERVER,DEBUG -c black,blue \"npm run dev:word\" \"npm run wait:word && npm run debug:word\"",
  
    "stop:outlook": "office-addin-debugging stop manifests/manifest.outlook.xml",
    "stop:word": "office-addin-debugging stop manifests/manifest.word.xml",

    "validate:outlook": "office-addin-manifest validate manifests/manifest.outlook.xml",
    "validate:word": "office-addin-manifest validate manifests/manifest.word.xml",
    "watch": "webpack --mode development --watch"
  },
  "homepage": "https://michel-bodje.github.io/automate",
  "dependencies": {
    "@azure/msal-browser": "^4.9.1",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "core-js": "^3.36.0",
    "regenerator-runtime": "^0.14.1"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.25.4",
    "@types/microsoft-graph": "^2.40.0",
    "@types/office-js": "^1.0.377",
    "@types/office-runtime": "^1.0.35",
    "acorn": "^8.11.3",
    "babel-loader": "^9.1.3",
    "concurrently": "^9.1.2",
    "copy-webpack-plugin": "^12.0.2",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "dotenv": "^16.4.7",
    "eslint-plugin-office-addins": "^4.0.3",
    "file-loader": "^6.2.0",
    "html-loader": "^5.1.0",
    "html-webpack-plugin": "^5.6.0",
    "office-addin-cli": "^2.0.3",
    "office-addin-debugging": "^6.0.3",
    "office-addin-dev-certs": "^2.0.3",
    "office-addin-lint": "^3.0.3",
    "office-addin-manifest": "^2.0.3",
    "office-addin-prettier-config": "^2.0.1",
    "os-browserify": "^0.3.0",
    "process": "^0.11.10",
    "source-map-loader": "^5.0.0",
    "style-loader": "^4.0.0",
    "wait-on": "^8.0.3",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "5.1.0"
  },
  "prettier": "office-addin-prettier-config",
  "browserslist": [
    "last 2 versions",
    "ie 11"
  ]
}
